<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/button_height"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#ce4a00"
                android:padding="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/close_job_screen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_arrow_back_white_24dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerHorizontal="true"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/employer_profile_picture"
                            android:layout_width="32dp"
                            android:layout_height="32dp" />

                        <TextView
                            android:id="@+id/employer_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Label.SansSerifLight"
                            android:textSize="12sp"
                            android:textStyle="normal"
                            android:textColor="#deffffff"
                            tools:text="Good Design &amp; Build"/>

                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/job_posted_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:fontFamily="sans-serif"
                        android:textStyle="normal"
                        android:textColor="#89ffffff"
                        tools:text="Posted 01/12/2017"/>
                    <TextView
                        android:id="@+id/job_skill"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:fontFamily="sans-serif"
                        android:textStyle="normal"
                        android:textColor="#ffffff"
                        tools:text="Labourer"/>
                </LinearLayout>

                <!--<LinearLayout-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignParentBottom="true"-->
                <!--android:layout_alignParentEnd="true"-->
                <!--android:orientation="vertical">-->
                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textSize="12sp"-->
                <!--android:fontFamily="sans-serif"-->
                <!--android:textStyle="normal"-->
                <!--android:textColor="#89ffffff"-->
                <!--android:text="@string/rate"/>-->

                <!--<TextView-->
                <!--android:id="@+id/pay_per_day_label"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textSize="16sp"-->
                <!--android:fontFamily="sans-serif-light"-->
                <!--android:textStyle="normal"-->
                <!--android:textColor="#ffffff"-->
                <!--tools:text="320PD"/>-->
                <!--</LinearLayout>-->

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">
                <!-- General info -->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.33"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Label.SansSerif"
                        android:textSize="12sp"
                        android:textColor="#89000000"
                        android:lineSpacingExtra="4sp"
                        android:text="@string/availability"/>
                    <TextView
                        android:id="@+id/availability_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-light"
                        android:textStyle="normal"
                        android:textColor="#191a1a"
                        android:lineSpacingExtra="12sp"
                        tools:text="15 places"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.33"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Label.SansSerif"
                        android:textSize="12sp"
                        android:textColor="#89000000"
                        android:lineSpacingExtra="4sp"
                        android:text="@string/start" />
                    <TextView
                        android:id="@+id/start_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-light"
                        android:textStyle="normal"
                        android:textColor="#191a1a"
                        android:lineSpacingExtra="12sp"
                        tools:text="12/01/18"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.33"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Label.SansSerif"
                        android:textSize="12sp"
                        android:textColor="#89000000"
                        android:lineSpacingExtra="4sp"
                        android:text="@string/end"/>
                    <TextView
                        android:id="@+id/end_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-light"
                        android:textStyle="normal"
                        android:textColor="#191a1a"
                        android:lineSpacingExtra="12sp"
                        tools:text="12/01/19"/>
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#1e000000"
                android:layout_marginStart="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">
                <!-- General info -->

                <LinearLayout
                    android:id="@+id/amount_layout"
                    android:layout_width="0dp"
                    android:layout_weight="0.33"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Label.SansSerif"
                        android:textSize="12sp"
                        android:textColor="#89000000"
                        android:lineSpacingExtra="4sp"
                        android:text="@string/amount"/>
                    <TextView
                        android:id="@+id/amount_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-light"
                        android:textStyle="normal"
                        android:textColor="#191a1a"
                        android:lineSpacingExtra="12sp"
                        tools:text="£47,450"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.66"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Label.SansSerif"
                        android:textSize="12sp"
                        android:textColor="#89000000"
                        android:lineSpacingExtra="4sp"
                        android:text="@string/location" />
                    <TextView
                        android:id="@+id/location_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-light"
                        android:textStyle="normal"
                        android:textColor="#191a1a"
                        android:lineSpacingExtra="12sp"
                        tools:text="London - SE"/>
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#1e000000"
                android:layout_marginStart="16dp"/>

            <TextView
                android:id="@+id/job_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/MaterialLightSubheadSecondary"
                android:padding="16dp"
                tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate"/>

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/action_job_button"
            android:textColor="@color/dark_grey"
            android:textSize="14sp"
            android:background="@color/sun_yellow"
            android:layout_centerInParent="true"
           android:gravity="center"
             />

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progress_action_job_button"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:indeterminateTint="@color/blue"
        android:indeterminateTintMode="src_in"
        android:indeterminate="true"
        android:visibility="visible"/>

</RelativeLayout>
