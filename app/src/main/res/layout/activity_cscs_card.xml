<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    tools:context=".activity.AddCvDocActivity">

    <RelativeLayout
        android:id="@+id/cPreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView

            android:tint="@color/white"
            android:layout_marginTop="44dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:text="Add CSCS Card"
            />

        <TextView
            android:layout_marginTop="90dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textColor="#d2d2d2"
            android:text="Waiting for Card..."
            />

        <RelativeLayout

            android:background="@drawable/cv_white_bg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp"
            android:layout_width="320dp"
            android:layout_height="220dp">

            <RelativeLayout
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="49dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/cv_white_bg"
                android:layout_width="120dp"
                android:layout_height="50dp">

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:background="@color/black"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="140dp">

            <RelativeLayout
                android:id="@+id/rl_camera"
                android:background="@drawable/circular_white_bg"
                android:layout_centerInParent="true"
                android:layout_width="62dp"
                android:layout_height="62dp">
                <ImageView
                    android:id="@+id/img_camera"
                    android:tint="@color/black"
                    android:src="@drawable/camera_ic"
                    android:layout_centerInParent="true"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_image"
                android:background="#232121"
                android:layout_centerVertical="true"
                android:layout_marginLeft="27dp"
                android:layout_width="71dp"
                android:layout_height="89dp">

            </RelativeLayout>
            <ImageView
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:layout_marginLeft="27dp"
                android:scaleType="fitXY"
                android:id="@+id/cv_img"
                android:layout_height="89dp"
                android:layout_width="71dp"
                />
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>