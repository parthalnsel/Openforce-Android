<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PastJobDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/past_job"
            android:layout_weight="1.35">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:weightSum="3">

                <ImageView
                    android:id="@+id/close_button_iv"
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_close_white_24dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2.2"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="Job History"/>
                <ImageView
                    android:id="@+id/send_email"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.4"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_email_white_24dp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:layout_margin="17dp"
                android:orientation="vertical"
                android:layout_alignParentBottom="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/job_name_tv"
                    android:text="Labour"
                    android:textSize="24sp"
                    android:textColor="@color/white"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1.3"
                        android:orientation="horizontal"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="19dp"
                            android:layout_height="19dp"
                            android:id="@+id/company_pic_iv"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/secure_logo"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:id="@+id/company_name_tv"
                            android:layout_height="wrap_content"
                            android:text="Good Design And Build"
                            android:textColor="@color/white"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="0.7"
                        android:gravity="end"
                        android:layout_gravity="end">

                        <RatingBar
                            android:id="@+id/rating_job_details"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="?android:attr/ratingBarStyleSmall"
                            android:numStars="5"
                            android:rating="2.5"
                            android:layout_gravity=""
                            android:stepSize="0.1"
                            android:progressTint="@color/sun_yellow"
                            android:secondaryProgressTint="@android:color/transparent"
                            android:progressBackgroundTint="@android:color/transparent"
                            android:isIndicator="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2.5"
                            android:id="@+id/rating_tv"
                            android:textColor="@color/sun_yellow"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.25">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:paddingTop="25dp"
                android:paddingLeft="20dp"
                android:paddingBottom="25dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Start"/>


                    <TextView
                        android:id="@+id/start_date_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12/01/2019"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="End"/>


                    <TextView
                        android:id="@+id/end_date_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12/01/2019"
                        />

                </LinearLayout>



            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="5dp"
                android:background="@color/dark_grey"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:paddingTop="25dp"
                android:paddingLeft="20dp"
                android:paddingBottom="25dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Days"/>


                    <TextView
                        android:id="@+id/no_of_days_worked_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="xxxx Days"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Amount"/>


                    <TextView
                        android:id="@+id/amount_get_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Â£47,450"
                        />

                </LinearLayout>



            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="5dp"
                android:background="@color/dark_grey"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:paddingTop="25dp"
                android:paddingLeft="20dp"
                android:paddingBottom="25dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Payment Status"/>


                    <TextView
                        android:id="@+id/payment_status_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Complete"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Reference"/>


                    <TextView
                        android:id="@+id/reference_no_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#xxxxxxxx"
                        />

                </LinearLayout>



            </LinearLayout>
        </LinearLayout>



    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="25dp">

        <Button
            android:id="@+id/button_help"
            style="@style/Button.Yellow"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:text="Contact Help and Support " />
    </RelativeLayout>

</RelativeLayout>