<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:background="@color/white"
    android:layout_height="80dp">

    <ImageView
        android:id="@+id/image_profile_employer"
        android:layout_width="@dimen/medium_avatar_size"
        android:layout_height="@dimen/medium_avatar_size"
        android:layout_marginEnd="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.70"
            android:layout_height="wrap_content" android:orientation="vertical">

            <TextView
                style="@style/MaterialLightBody2"
                android:id="@+id/job_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Labourer"/>
            <TextView
                android:id="@+id/last_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#60000000"
                tools:text="Congratulations, you are hired!" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:gravity="end"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/last_message_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="08:23 AM"/>

            <LinearLayout
                android:id="@+id/notification_layout"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:gravity="center"
                android:background="@drawable/background_notification_conversation">
                <TextView
                    android:id="@+id/unreaded_messages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:textColor="#deffffff"
                    android:lineSpacingExtra="6sp"
                    tools:text="9+"/>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>